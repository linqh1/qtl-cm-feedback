<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.quantil.cm.feedback.mapper.PurgeTaskLogMapper">

    <select id="selectByTaskId" resultType="com.quantil.cm.feedback.domain.PurgeTaskLog">
        SELECT *
          FROM purge_task_log
    <where>
        <if test="taskIds != null and taskIds.size() > 0">
          AND purge_task_id IN
            <foreach collection="taskIds" open="(" close=")" separator="," item="id">
                #{id}
            </foreach>
        </if>
        <if test="taskIds == null or taskIds.size() &lt;= 0">
            AND 1 = 0
        </if>
    </where>
    </select>
    
</mapper>