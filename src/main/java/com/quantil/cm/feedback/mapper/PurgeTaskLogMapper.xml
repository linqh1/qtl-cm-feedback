<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.quantil.cm.feedback.mapper.PurgeTaskLogMapper">

    <select id="selectByTaskId" resultType="com.quantil.cm.feedback.domain.PurgeTaskLog">
        SELECT *
          FROM purge_task_log
          WHERE purge_task_id = #{taskId}
            AND type = 0
    </select>

    <select id="selectMultiByTaskId" resultType="com.quantil.cm.feedback.domain.PurgeTaskLog">
        SELECT *
          FROM purge_task_log
    <where>
        <if test="purgeTaskIds != null and purgeTaskIds.size() > 0">
          AND purge_task_id IN
            <foreach collection="purgeTaskIds" open="(" close=")" separator="," item="purgeTaskId">
                #{purgeTaskId}
            </foreach>
        </if>
        <if test="purgeTaskIds == null or purgeTaskIds.size() &lt;= 0">
            AND 1 = 0
        </if>
    </where>
    </select>
    
</mapper>